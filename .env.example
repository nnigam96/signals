# Signals Environment Configuration

# Server
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Resend API (email service)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=Signals <signals@yourdomain.com>

# MongoDB
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/signals

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# Firecrawl (web scraping)
FIRECRAWL_API_KEY=fc-your_api_key_here

# Voyage AI (embeddings)
VOYAGE_AI_API_KEY=your_api_key_here

# OpenRouter (optional, multi-model)
OPENROUTER_API_KEY=sk-or-your_api_key_here
